[
    {
        "output": "mod-selector.pot",
        "inputRoot": "..",
        "project": "Pyrogenesis - Mod Selector",
        "copyrightHolder": "Wildfire Games",
        "rules": [
            {
                "extractor": "javascript",
                "filemasks": [
                    "gui/modio/**.js",
                    "gui/modmod/**.js"
                ],
                "options": {
                   "format": "javascript-format",
                   "keywords": {
                        "translate": [1],
                        "translatePlural": [1, 2],
                        "translateWithContext": [[1], 2],
                        "translatePluralWithContext": [[1], 2, 3],
                        "markForTranslation": [1],
                        "markForTranslationWithContext": [[1], 2]
                    },
                    "commentTags": [
                        "Translation:"
                    ]
                }
            },
            {
                "extractor": "xml",
                "filemasks": [
                    "gui/help/**.xml",
                    "gui/modio/**.xml",
                    "gui/modmod/**.xml"
                ],
                "options": {
                    "format": "none",
                    "keywords": {
                        "translatableAttribute": {
                            "locationAttributes": ["id"]
                        },
                        "translate": {}
                    }
                }
            },
            {
                "extractor": "txt",
                "filemasks": [
                    "gui/help/help.txt"
                ],
                "options": {
                }
            }
        ]
    }
]

<?xml version="1.0" encoding="utf-8"?>

<objects>

	<script directory="gui/common/"/>
	<script directory="gui/networkreport/"/>

	<object type="image" sprite="ModernFade"/>

	<object type="image" style="ModernDialog" size="50%-400 50%-250 50%+400 50%+250">

		<action on="Tick">
			onTick();
		</action>

		<object style="TitleText" type="text" size="50%-128 4 50%+128 36">
			<translatableAttribute id="caption">Network</translatableAttribute>
		</object>

		<object name="clientList"
			style="ModernSortedList"
			selected_column="name"
			selected_column_order="1"
			type="olist"
			sortable="true"
			size="25 50 100%-25 100%-60"
			font="sans-bold-stroke-13"
		>
			<column id="name" color="0 128 128" width="25%">
				<translatableAttribute id="heading">Name</translatableAttribute>
			</column>

			<column id="status" color="0 128 128" width="45%">
				<translatableAttribute id="heading">Status</translatableAttribute>
			</column>

			<column id="meanRTT" color="0 128 128" width="15%">
				<translatableAttribute id="heading">Ping</translatableAttribute>
			</column>

			<column id="packetLoss" color="0 128 128" width="15%">
				<translatableAttribute id="heading">Packet Loss</translatableAttribute>
			</column>

			<action on="SelectionChange">
				onClientSelection();
			</action>

			<action on="SelectionColumnChange">
				updateClientList();
			</action>

			<action on="MouseLeftDoubleClickItem">
				askToKickSelectedClient();
			</action>
		</object>

		<object name="kickButton" type="button" style="ModernButtonRed" size="20 100%-48 170 100%-20">
			<translatableAttribute id="caption">Kick</translatableAttribute>
			<translatableAttribute id="tooltip">Disconnect this player immediately.</translatableAttribute>
			<action on="Press">
				kickSelectedClient(false);
			</action>
		</object>

		<object name="banButton" type="button" style="ModernButtonRed" size="180 100%-48 330 100%-20">
			<translatableAttribute id="caption">Ban</translatableAttribute>
			<translatableAttribute id="tooltip">Disconnect this player immediately and deny any request to rejoin.</translatableAttribute>
			<action on="Press">
				kickSelectedClient(true);
			</action>
			<!-- TODO: skip confirmation hotkey -->
		</object>

		<object type="button" style="ModernButtonRed" size="100%-170 100%-48 100%-20 100%-20" hotkey="cancel">
			<translatableAttribute id="caption">Close</translatableAttribute>
			<action on="Press">
				Engine.PopGuiPageCB();
			</action>
			<!-- TODO: skip confirmation hotkey -->
		</object>

	</object>

</objects>

<?xml version="1.0" encoding="utf-8"?>
<object name="tradeDialogPanel"
	size="50%-80 50%-280 50%+80 50%+136"
	type="image"
	hidden="true"
	sprite="ModernDialog"
	z="100"
>
	<object type="text" style="TitleText" size="50%-96 -16 50%+96 16">
		<translatableAttribute id="caption">Barter &amp; Trade Goods</translatableAttribute>
	</object>


	<!-- Barter Goods -->
	<object size="24 24 100%-24 33%">

		<object name="barterHeader" size="8 0 100% 32" type="text" style="ModernLeftLabelText">
			<translatableAttribute id="caption">Barter</translatableAttribute>
		</object>
		<object size="0 28 100% 29" type="image" sprite="ModernGoldLine"/>

		<object size="0 38 100% 38+84">

			<object size="0 0 60 41" type="text" style="ModernRightLabelText">
				<translatableAttribute id="caption">Sell:</translatableAttribute>
			</object>

			<object size="0 100%-41 60 100%" type="text" style="ModernRightLabelText">
				<translatableAttribute id="caption">Buy:</translatableAttribute>
			</object>

			<object size="72 0 100% 100%" type="text" style="ModernLabelText" name="barterNoMarketsMessage">
				<translatableAttribute id="caption">No Markets Available</translatableAttribute>
			</object>

			<object name="barterResources" size="72 0 100% 100%">
				<repeat count="8">
					<object name="barterResource[n]" size="0 0 58 100%">

						<!-- Sell -->
						<object name="barterSellButton[n]" style="iconButton" type="button" size="0 0 41 41" tooltip_style="sessionToolTipBottomBold" hidden="true">
							<object name="barterSellIcon[n]" type="image" ghost="true" size="3 3 100%-3 100%-3"/>
							<object name="barterSellAmount[n]" ghost="true" style="resourceText" type="text" size="0 0 100% 50%"/>
							<object name="barterSellSelection[n]" hidden="true" type="image" ghost="true" size="3 3 100%-3 100%-3" sprite="stretched:session/icons/corners.png"/>
						</object>

						<!-- Buy -->
						<object name="barterBuyButton[n]" style="iconButton" type="button" size="0 100%-41 41 100%" tooltip_style="sessionToolTipBottomBold" hidden="true">
							<object name="barterBuyIcon[n]" type="image" ghost="true" size="3 3 100%-3 100%-3"/>
							<object name="barterBuyAmount[n]" ghost="true" style="resourceText" type="text" size="0 0 100% 50%"/>
						</object>

					</object>
				</repeat>
			</object>

		</object>
	</object>

	<!-- Trading goods -->
	<object size="24 33%+32 100%-24 100%-64">

		<object name="tradeHeader" size="8 0 100% 32" type="text" style="ModernLeftLabelText">
			<translatableAttribute id="caption">Trade</translatableAttribute>
		</object>
		<object size="0 28 100% 29" type="image" sprite="ModernGoldLine"/>

		<object name="tradeGoods" size="0 38 100% 38+32">

			<object size="0 0 60 100%" type="text" style="ModernRightLabelText">
				<translatableAttribute id="caption">Goods:</translatableAttribute>
			</object>

			<object size="72 0 100% 100%" name="tradeResources">
				<repeat count="8">
					<object name="tradeResource[n]" size="0 0 58 32">

						<object name="tradeResourceButton[n]" size="4 0 36 100%" type="button" style="StoneButton">
							<object name="tradeResourceIcon[n]" type="image" ghost="true"/>
							<object name="tradeResourceSelection[n]" type="image" sprite="stretched:session/icons/corners.png" ghost="true"/>
							<object name="tradeResourceText[n]" type="text" style="ModernLabelText" ghost="true"/>
						</object>
						<object name="tradeArrowUp[n]" size="36 0 52 50%" type="button" style="iconButton">
							<object type="image" ghost="true" sprite="StoneArrowUp"/>
						</object>
						<object name="tradeArrowDn[n]" size="36 50% 52 100%" type="button" style="iconButton">
							<object type="image" ghost="true" sprite="StoneArrowDn"/>
						</object>

					</object>
				</repeat>
			</object>

			<object name="tradeHelp" size="100%-24 4 100% 28" enabled="false" type="button" style="StoneButton" tooltip_style="sessionToolTipBold">
				<object size="20% 15% 80% 75%" type="image" ghost="true" sprite="iconInfoWhite"/>
			</object>

		</object>

		<object name="traders" size="8 88 100% 100%" type="text" style="ModernLeftTabLabelText"/>

	</object>

	<object size="50%-64 100%-50 50%+64 100%-22" type="button" style="StoneButton">
		<translatableAttribute id="caption">Close</translatableAttribute>
		<action on="Press">closeTrade();</action>
	</object>
</object>

